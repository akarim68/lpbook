@import '_config'

header
  width 100%
  // max-width 1280px
  display table
  +sp()
    padding 3vw
    display block
  .sitename
    background c_white
    color c_black
    width 100%
    line-height 1
    +pc()
      padding 25px 30px
      font-size 2.32vw
      display table
    +tb()
      padding 25px 30px
      font-size 2.32vw
      display table
    +sp()
      font-size 6.4vw
      display block
      text-align left
    &_box
      +pc()
        display table-cell
      +tb()
        display table-cell
      +sp()
        display block
        margin-bottom 3vw
      a
        text-decoration none
        color c_black
        +pc()
          display inline-block
        +tb()
          display inline-block
        +sp()
          display block
          margin-bottom 1vw
      &Link
        letter-spacing normal
      &Tagline
        letter-spacing normal
        color #cc9966
        +pc()
          font-size 1.5vw
          margin-left 1.5625%
          display inline-block
        +tb()
          font-size 1.5vw
          margin-left 1.5625%
          display inline-block
        +sp()
          font-size 4.5vw
          display block
          margin-bottom 1vw
      &Tit
        letter-spacing normal
        font-weight bold
        +pc()
          display inline-block
          margin-left 1.875%
        +tb()
          display inline-block
          margin-left 1.875%
        +sp()
          display block
          margin-bottom 1vw
    &_lang
      +pc()
        font-size 1.5vw
        display table-cell
      +tb()
        font-size 1.5vw
        display table-cell
      +sp()
        font-size 4.4vw
        text-align right

.wrapper
  width 100%
  .container
    width 100%
    +pc()
      width 100%
      // max-width 1280px
      margin 0 auto
    +tb()
      width 100%
      // max-width 1280px
      margin 0 auto
    .mainVisual
      width 100%
    .imgLink
      width 100%
      display block
      ul
        display table
        width 100%
        +sp()
          display block
      li
        width 33.33333333333%
        padding-bottom 33.33333333333%
        position relative
        display table-cell
        text-align center
        +sp()
          display block
          width 100%
          padding-bottom 100%
        &:first-child
          background url('../img/img_link01.jpg') no-repeat
          background-size 100%
        &:nth-child(2)
          background url('../img/img_link02.jpg') no-repeat
          background-size 100%
        &:last-child
          background url('../img/img_link03.jpg') no-repeat
          background-size 100%
        a
          color c_white
          text-decoration none
          position absolute
          top 50%
          left 0
          right 0
          vendor('transform',translate(0,-50%))
          margin auto
          display block
          width 100%
          height 100%
          vendor('opacity',0)
          +tb()
            vendor('opacity',1)
            background rgba(0,0,0,0.3)
          +sp()
            vendor('opacity',1)
            background rgba(0,0,0,0.3)
          &:hover
            background rgba(0,0,0,0.5)
            vendor('opacity',10)
            +sp()
              background rgba(0,0,0,0.3)
      &_inner
        position absolute
        top 50%
        left 0
        right 0
        vendor('transform',translate(0,-50%))
        margin auto
        display block
        font-family "mplus-1c-thin", sans-serif
        +pc()
          font-size 5.625vw
        +tb()
          font-size 5.625vw
        +sp()
          font-size 17vw
        .fzL
          +pc()
            font-size 15.625vw
          +tb()
            font-size 15.625vw
          +sp()
            font-size 45vw
        .fzS
          vertical-align bottom
          +pc()
            font-size 3.625vw
          +tb()
            font-size 3.625vw
          +sp()
            font-size 12vw
    .section
      +pc()
        margin-top 60px
        &:last-of-type
          margin-bottom 60px
      +tb()
        margin-top 60px
        &:last-of-type
          margin-bottom 60px
      +sp()
        margin-top 10vw
        &:last-of-type
          margin-bottom 10vw
      &Tit2
        background c_black
        color c_white
        text-align center
        font-family 'selfFont', 'Open Sans', sans-serif;
        +pc()
          font-size 3.6vw
          padding 35px 0
          margin-bottom 60px
        +tb()
          font-size 3.6vw
          padding 35px 0
          margin-bottom 60px
        +sp()
          font-size 10vw
          padding 5vw 0
          margin-bottom 5vw
      &Tit3
        line-height 1.3
        font-family "mplus-1c-light", sans-serif
        +pc()
          font-size 3.6vw
          margin-bottom 60px
        +tb()
          font-size 3.6vw
          margin-bottom 60px
        +sp()
          font-size 5vw
          margin-bottom 5vw
        h3
          +pc()
            width 66vw
            margin 0 auto
          +tb()
            width 70vw
            margin 0 auto
          +sp()
            width 90vw
            margin 0 auto
        span
          display block
        &_sub
          text-align center
          font-family "mplus-1c-thin", sans-serif
          +pc()
            font-size 3vw
            margin-top 10px
          +tb()
            font-size 3vw
            margin-top 10px
          +sp()
            margin-top 1vw
      &Tit4
        font-family 'selfFont', 'Open Sans', sans-serif;
        font-weight bold
        line-height 1
        +pc()
          font-size 2.4vw
          margin-bottom 10px
        +tb()
          font-size 2.4vw
          margin-bottom 10px
        +sp()
          font-size 5vw
          margin-bottom 2vw
    .article
      width 100%
      &Block
        line-height 1.5
        width 100%
        +pc()
          padding 0 60px
          font-size 1.6vw
          margin-bottom 50px
        +tb()
          padding 0 60px
          font-size 1.6vw
          margin-bottom 0
        +sp()
          &:last-of-type
            .articleTxt
              margin-bottom 0
        p
          +pc()
            margin-bottom 30px
            &:last-of-type
              margin-bottom 0
          +tb()
            margin-bottom 30px
            &:last-of-type
              margin-bottom 0
      &Img
        &_flL
          +pc()
            float left
            width 285px
            margin-right 15px
          +tb()
            width 100%
            display block
            margin-bottom 5vw
          +sp()
            width 100%
            display block
            margin-bottom 5vw
        &_flR
          +pc()
            float right
            width 285px
            margin-left 15px
          +tb()
            width 100%
            display block
            margin-bottom 5vw
          +sp()
            width 100%
            display block
            margin-bottom 5vw
      &Txt
        word-break break-word
        +tb()
          display block
          width 100%
          margin 0 auto
          margin-bottom 5vw
          p
            margin-bottom 2.5vw
            &:last-child
              margin-bottom 0
        +sp()
          display block
          width 90%
          margin 0 auto
          margin-bottom 5vw
          font-size 3.5vw
          p
            margin-bottom 2.5vw
            &:last-child
              margin-bottom 0
    .col2
      width 100%
      display block
      +pc()
        padding 0 60px
        font-size 1.6vw
        letter-spacing -0.5em
      +tb()
        padding 0 60px
        font-size 1.6vw
        letter-spacing -0.5em
      &L
        +pc()
          display inline-block
          letter-spacing normal
          margin-right 40px
          vertical-align top
          width 36.328125%
        +tb()
          display inline-block
          letter-spacing normal
          margin-right 40px
          vertical-align top
          width 36.328125%
        +sp()
          display block
          width 100%
          margin-bottom 3vw
        &_img
          +pc()
            width 100%
          +tb()
            width 100%
          +sp()
            width 90%
            margin 0 auto
      &R
        +pc()
          display inline-block
          letter-spacing normal
          width calc(100% - 36.328125% - 40px)
          vertical-align top
        +tb()
          display inline-block
          letter-spacing normal
          width calc(100% - 36.328125% - 40px)
          vertical-align top
        +sp()
          display block
          width 90%
          margin 0 auto
        &_txt
          line-height 1.5
          +pc()
            font-size 1.6vw
          +tb()
            font-size 1.6vw
          +sp()
            font-size 3.5vw
          p
            +pc()
              margin-bottom 20px
            +tb()
              margin-bottom 20px
            +sp()
              margin-bottom 2.5vw
          .note
            +pc()
              font-size 1.4vw
            +tb()
              font-size 1.4vw
            +sp()
              font-size 2.8vw
          .btnImg
            margin-bottom 0
            +pc()
              width 200px
            +tb()
              width 200px
            +sp()
              width 100%
    .video
      +pc()
        margin 40px auto
        text-align center
        padding 0 60px
        iframe
          width 100%
      +tb()
        margin 40px auto
        text-align center
        padding 0 60px
        iframe
          width 100%
      @media screen and (max-width: 1000px)
        width calc(100% - 120px)
        position relative
        padding 0 0 48.271%
        iframe
          width 100%
          height 100%
          position absolute
          top 0
          left 0
          margin auto
          max-width 853px
          max-height 480px
      +sp()
        width 90%
        margin 5vw auto 0
    .btnWrapper
      display block
      +pc()
        padding 0 60px
      +tb()
        padding 0 60px
      +sp()
        width 90%
        margin 5vw auto 0
      ul
        display block
        text-align center
        +pc()
          letter-spacing -0.5em
        +tb()
          letter-spacing -0.5em
        li
          letter-spacing normal
          border 1px solid c_black
          text-align left
          +pc()
            display inline-block
            width 34vw
            margin-right 25px
            font-size 1.6vw
            &:last-child
              margin-right 0
          +tb()
            display inline-block
            width 30.5625vw
            margin-right 25px
            font-size 1.6vw
            &:last-child
              margin-right 0
          +sp()
            display block
            width 100%
            margin-bottom 2.5vw
            font-size 3.5vw
            &:last-child
              margin-bottom 0
          a
            display block
            text-decoration none
            color c_black
            position relative
            +pc()
              padding 15px 20px
              &:after
                content ''
                border-top 1px solid c_black
                border-right 1px solid c_black
                vendor('transform',rotate(45deg))
                position absolute
                width 10px
                height 10px
                top 0
                bottom 0
                right 15px
                margin auto
              &:hover
                background c_black
                color c_white
                vendor('opacity',1)
                &:after
                  border-top 1px solid c_white
                  border-right 1px solid c_white
            +tb()
              padding 15px 20px
              &:after
                content ''
                border-top 1px solid c_black
                border-right 1px solid c_black
                vendor('transform',rotate(45deg))
                position absolute
                width 10px
                height 10px
                top 0
                bottom 0
                right 15px
                margin auto
              &:hover
                background c_black
                color c_white
                vendor('opacity',1)
                &:after
                  border-top 1px solid c_white
                  border-right 1px solid c_white
            +sp()
              padding 3vw 5vw
              &:after
                content ''
                border-top 1px solid c_black
                border-right 1px solid c_black
                vendor('transform',rotate(45deg))
                position absolute
                width 2vw
                height 2vw
                top 0
                bottom 0
                right 5vw
                margin auto
footer
  background c_black
  color c_white
  .container
    display block
    +pc()
      padding 30px 60px
    +tb()
      padding 30px 60px
    +sp()
      width 90%
      margin 0 auto
      padding 8vw 0
    &_col2
      display block
      a
        color c_white
      +pc()
        letter-spacing -0.5em
      &L
        letter-spacing normal
        +pc()
          display inline-block
          vertical-align bottom
          margin-right 85px
        +tb()
          display block
          margin-bottom 10vw
        +sp()
          display block
          margin-bottom 10vw
        .sns
          display block
          +pc()
            margin-bottom 30px
          ul
            display table
            +tb()
              width 100%
              margin-bottom 5vw
            +sp()
              width 100%
              margin-bottom 5vw
            li
              display table-cell
              text-align center
              +pc()
                font-size 1.5vw
                width 4vw
              +tb()
                font-size 3.5vw
                width 14.28571428571429%
                &:first-child
                  width 10%
              +sp()
                font-size 3.5vw
                width 14.28571428571429%
                &:first-child
                  width 10%
              a
                display block
        .patreon
          display block
          +pc()
            width 257px
          +tb()
            width 257px
          +sp()
            width 100%
      &R
        letter-spacing normal
        text-align left
        +pc()
          display inline-block
          vertical-align bottom
        +tb()
          display block
        +sp()
          display block
        .logo
          display block
          ul
            display block
            li
              display inline-block
              +pc()
                width 120px
                &:first-child
                  width 85px
                  margin-right 30px
              +tb()
                width 120px
                &:first-child
                  width 85px
                  margin-right 30px
              +sp()
                width 18.75vw
                &:first-child
                  width 13.28125vw
                  margin-right 3vw
    .copyright
      display block
      text-align center
      +pc()
        margin 40px auto 0
        font-size 12px
      +tb()
        margin 40px auto 0
        font-size 12px
      +sp()
        margin 8vw auto 0
        font-size 2.5vw
